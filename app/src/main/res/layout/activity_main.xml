<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="matrix"
            android:src="@drawable/eb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            /**Question1**/

            <LinearLayout
                android:id="@+id/RL1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="#000000"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/QH1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:paddingTop="6dp"
                    android:text="QUESTION 1"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/Q1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="Scientific name for mammals is called: "
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/q1"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="#ffffff"
                    android:focusedByDefault="false"
                    android:text="  "
                    android:textSize="28sp" />
            </LinearLayout>

            /**Question 2**/

            <LinearLayout
                android:id="@+id/RL2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="#e8e8e8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/QH2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:paddingTop="6dp"
                    android:text="QUESTION 2"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/Q2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="Who is known as father of Zoology?"
                    android:textSize="18sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/arist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:onClick="zooFa"
                        android:text="ARISTOTLE"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/darwin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:onClick="zooFa"
                        android:text="DARWIN"
                        android:textSize="18sp" />
                </RadioGroup>
            </LinearLayout>

            /**Question2**/

            <LinearLayout
                android:id="@+id/RL3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="#000000"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/QH3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:paddingTop="6dp"
                    android:text="QUESTION 3"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/Q3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="The human heart is "
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/ph"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:buttonTint="#ffffff"
                        android:onClick="zooFa2"
                        android:text=" PULSATING HEART "
                        android:textColor="#ffffff"
                        android:textSize="18sp" />
                    >

                    <RadioButton
                        android:id="@+id/ah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:buttonTint="#ffffff"
                        android:onClick="zooFa2"
                        android:text="AMPULLARY HEART"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/nh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:buttonTint="#ffffff"
                        android:onClick="zooFa2"
                        android:text="NEUROGEIC HEART"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/mh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:buttonTint="#ffffff"
                        android:onClick="zooFa2"
                        android:text="MYOGENIC HEART"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />
                </RadioGroup>
            </LinearLayout>

            /**Question4**/

            <LinearLayout
                android:id="@+id/RL4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#e8e8e8">

                <TextView
                    android:id="@+id/QH4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:paddingTop="6dp"
                    android:text="QUESTION 4"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/Q5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="Which of the following are examples of non-placenta mammals? "
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/ko"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text=" KOALAS "
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/op"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="OPPOSUMS"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/sh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="SHREWS"
                    android:textSize="18sp" />

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="168dp"
                android:layout_marginRight="168dp"
                android:onClick="submit"
                android:text="SUBMIT" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>